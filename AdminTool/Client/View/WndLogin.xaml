<Window x:Class="AdminTool.Client.View.WndLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Left" Height="23" Margin="10,145,0,0" TextWrapping="Wrap" Text="Benutzername" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="10,173,0,0" TextWrapping="Wrap" Text="Passwort" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,200.522,0,0" VerticalAlignment="Top" Click="btnLogin_Click" UseLayoutRounding="False" RenderTransformOrigin="-1.177,4.977" Width="120"/>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="100" Margin="151,41,0,0" VerticalAlignment="Top" Width="100" Source="Images/logoPlatzhalter.png"/>

    </Grid>
</Window>
