<Window x:Class="CourseManagement.Client.View.WndLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal">
            <StackPanel  Margin="10" Width="100">
                <Label x:Name="lblUser" Content="Benutzername"/>
                <TextBox x:Name="tbUsername" />
                
            </StackPanel>
            <StackPanel Margin="10" Width="100">
                <Label x:Name="lblPassword" Content="Passwort" />
                <PasswordBox x:Name="pwbPassword" Margin="2"/>
                <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click" Margin="10"/>
            </StackPanel>
           
        </StackPanel>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="100" Margin="56,41,0,0" VerticalAlignment="Top" Width="195" Source="Images/logoPlatzhalter.png"/>
    </Grid>
</Window>
