<Window x:Class="CourseManagement.Client.View.WndNewPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WndNewPayment" Height="345.775" Width="618.632" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lblNewPayment" Content="Bezahlung" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Margin="10,45" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <Label x:Name="lblPaymentCourse" Content="Kurse" />
                <ComboBox x:Name="cbPaymentCourse" Width="200" HorizontalAlignment="Left" SelectionChanged="cbPaymentCourse_SelectionChanged"/>
            </StackPanel>
            <StackPanel Margin="10" Width="327">
                <Label x:Name="lblPaymentGrid" Content="Details" Visibility="Hidden" />
                <DataGrid x:Name="dgPayment" Visibility="Hidden" ItemsSource="{Binding}">
 
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
